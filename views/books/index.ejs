<%- include('../partials/head.ejs') %>
<body>
    <%- include("../partials/header.ejs") %>
    <main>
        <div>
            <a href="/books/new"><button>Add a Book</button></a>
        </div>
        <div class="row">
            <% for(book of books) { %>
                    <div class="col-sm-3"><a href="/books/<%= book._id %>">
                    <img src="<%= book.cover %>" class="img-thumbnail" style="width: 200px; height: 300px" alt="book cover">
                    <h3><%= book.title %></h3>
                </a></div>
            <% } %>
            </div></div>
    </main>
</body>
</html>